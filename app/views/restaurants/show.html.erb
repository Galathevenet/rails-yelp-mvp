<div class="navbar navbar-expand-lg navbar-light bg-light d-flex justify-content-between">
<h1 class= "navbar-brand p-3"><%= @restaurant.name %></h1>
<div class="p-3" ><%= link_to "Back to restaurants' list", restaurants_path %></div>
</div>

<ul>
<li><%= @restaurant.category %></li>
<li><%= @restaurant.address %></li>
<li><%= @restaurant.phone_number %></li>
</ul>

<ul class="list-group">
<% @restaurant.reviews.each do | review | %>
<li class="list-group-item"><%= review.rating %> | <%= review.content %></li>
<% end %>
</ul>

<div class= "d-flex p-4 justify-content-center">
<%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :rating, label: "rating 1-5" %>
  <%= f.input :content %>
  <%= f.submit "Submit your review", class: "btn btn-success" %>
<% end %>
</div>
