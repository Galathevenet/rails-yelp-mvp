<h1><%= @restaurant.name %></h1>

<ul>
<li><%= @restaurant.category %></li>
<li><%= @restaurant.address %></li>
<li><%= @restaurant.phone_number %></li>
</ul>

<ul>
<% @reviews.each do | review | %>
<li><%= review.rating %> | <%= review.content %></li>
<% end %>
</ul>

<ul>
<li><%= link_to "Add a review", new_restaurant_review_path(@restaurant) %></li>
<li><%= link_to "Back to restaurants' list", restaurants_path %></li>
</ul>
